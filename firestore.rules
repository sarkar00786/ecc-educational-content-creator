rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Public content - read for all, write only if user is authenticated
    match /artifacts/{appId}/public/data/sharedContent/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid != null;
    }

    // 🔐 Users can only access their own data
    match /artifacts/{appId}/users/{userId} {
      allow read, write, create: if request.auth != null;
    }

    match /artifacts/{appId}/users/{userId}/generatedContent/{docId} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ✅ Feedback allowed for signed-in users
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
    }

    // 🔧 Temporary: Allow authenticated users to read/write their own data
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🚫 Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
